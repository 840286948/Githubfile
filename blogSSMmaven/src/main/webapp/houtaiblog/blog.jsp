	<script type="text/javascript">
		function yuedu(){
			$.ajax({
				type:"post",
				url:"userlog/AjaxupdStatus.do",
				data:"uid="+'${currentUser.id}',
				dataType:"JSON",
				success:function(data){
					window.location.reload();
				}
			});
		}
		function log(){
			$.ajax({
				type:"post",
				url:"userlog/AjaxlistGR.do",
				data:"uid="+'${currentUser.id}',
				dataType:"JSON",
				success:function(data){
					var a = "";
					$.each(data,function(index,log){
						var date=new Date(log.createTime);
						var month=date.getMonth()+1;
						a += "<tr><td>"+log.ip+"</td>";
						a += "<td>"+date.getFullYear()+"-"+month+"-"+date.getDate()+"&nbsp;"+date.getHours()+":"+date.getMinutes()+":"+date.getSeconds()+"</td>";
						a += "<td>成功</td></tr>";
					});
					$("#tbody").html(a);
				}
			});
		}
	</script>
